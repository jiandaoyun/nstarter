{
  "name": "nstarter",
  "description": "Startup CLI tool for node projects with template.",
  "version": "0.7.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jiandaoyun/nstarter.git",
    "directory": "cli"
  },
  "license": "MIT",
  "bin": {
    "nstarter": "./dist/index.js"
  },
  "type": "module",
  "files": [
    "dist/",
    "doc/",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rimraf dist && tsc --build tsconfig.json",
    "start": "node --no-warnings --import=extensionless/register ./dist/index.js",
    "eslint": "eslint --ext .js,.ts --config .eslintrc.cjs ./src",
    "eslint:html": "npm run eslint -- --output-file ./lint/eslint.html --format html",
    "clean": "rimraf dist && rimraf lint"
  },
  "keywords": [
    "project starter",
    "node.js",
    "typescript",
    "nstarter",
    "starter",
    "template"
  ],
  "dependencies": {
    "async": "^3.2.5",
    "extensionless": "^1.9.9",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "inquirer": "^9.3.5",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "moment-timezone": "^0.5.45",
    "nstarter-core": "*",
    "simple-git": "^3.25.0",
    "winston": "^3.13.1",
    "winston-daily-rotate-file": "^5.0.0",
    "winston-transport": "^4.7.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/async": "^3.2.24",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.7",
    "@types/yargs": "^17.0.32"
  },
  "engines": {
    "node": ">=20.16.0",
    "npm": ">=10.8.0"
  }
}
