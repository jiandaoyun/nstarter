{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2020",
        "noImplicitAny": true,
        "allowJs": true,
        "checkJs": false,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": false,
        "outDir": "../../dist",
        "baseUrl": "./src",
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "forceConsistentCasingInFileNames": true,
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "pretty": true,
        "alwaysStrict": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": [
            "../../typings",
            "../../node_modules/@types"
        ]
    },
    "include": [
        "../../src/**/*"
    ],
    "exclude": [
        "../../node_modules"
    ],
    "ts-node": {
        "transpileOnly": true,
        "files": true,
        "compilerOptions": {}
    }
}
